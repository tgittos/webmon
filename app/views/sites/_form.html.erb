<% if @site.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@site.errors.count, "error") %>
      prevented this site from being saved:
    </h2>
    <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= simple_form_for(@site) do |f| %>

  <%= f.input :name, label: "Name <em class=\"hint\">The name of the site</em>".html_safe %>
  <%= f.input :url, label: "URL <em class=\"hint\">The URL of the site</em>".html_safe %>

  <%= f.button :submit, class: 'btn-primary', id: 'create-site' %>
    
<% end %>
