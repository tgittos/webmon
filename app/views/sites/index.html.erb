<header>
  <h1>Sites</h1>

  <ul class="actions">
    <li><%= link_to "New Site", new_site_path,
      class: "btn new" %></li>
  </ul>
</header>

<div class="sites">
  <% @sites.each do |site| %>
    <h2 class="<%= site.latest_status %>"><%= link_to site.name, site %></h2>
    <p><%= site.url %></p>
  <% end %>
</div>
