<%= simple_form_for([site, test]) do |f| %>
  <%= f.input :comparison, collection: ResponseTimeTest.comparisons %>
  <%= f.input :content %>
  <%= f.input :failure_threshold, label: "# failures before email?", input_html: { value: '2' } %>
  <%= f.input :clear_threshold, label: "# successes before clear?", input_html: { value: '2' } %>

  <%= f.button :submit, class: "btn-primary", id: "create-test" %>
<% end %>
